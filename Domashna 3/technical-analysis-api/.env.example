# On-Chain API Keys
# Glassnode API (https://glassnode.com) - Free tier: 10 API calls/day
GLASSNODE_API_KEY=your_glassnode_api_key_here

# Sentiment Analysis API Keys
# LunarCrush API (https://lunarcrush.com) - Free tier: 100 calls/day
LUNARCRUSH_API_KEY=your_lunarcrush_api_key_here

# NewsAPI (https://newsapi.org) - Free tier: 100 requests/day
NEWSAPI_KEY=your_newsapi_key_here

# Reddit API Configuration
# Register app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=crypto-tracker/1.0

# Feature Flags
ENABLE_ONCHAIN=true
ENABLE_SENTIMENT=true

# Cache Settings (in seconds)
CACHE_EXPIRY_SECONDS=300
